  cat <<EOF
  {{ get "event" | toYaml }}
  EOF

tasks:
  foo:
    script: |
      echo foo!
  fail:
    script: |
      echo simulated failure
      exit 2
  dockerrun:
    script: |
      docker run --rm alpine:3.9 sh -c 'echo hello docker!'
